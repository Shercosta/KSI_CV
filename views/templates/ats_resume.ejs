<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title><%= firstName %>'s Resume</title>
    
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 16px;
            line-height: 1.5;
            color: #333;
        }

        .header {
            margin-bottom: 20px;
        }

        h1, h2, h3 {
            margin: 0;
        }

        h1 {
            font-size: 36px;
            font-weight: bold;
            text-transform: uppercase;
            margin-bottom: 10px;
        }

        .header p {
            margin: 0;
        }

        .summary {
            margin-bottom: 20px;
        }

        .skills {
            margin-bottom: 20px;
        }

        .skills ul {
            margin: 0;
            padding: 0;
            list-style: none;
            display: flex;
            flex-wrap: wrap;
        }

        .skills li {
            margin-right: 20px;
            margin-bottom: 10px;
            background-color: #f5f5f5;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .experience {
            margin-bottom: 20px;
        }

        .job {
            margin-bottom: 20px;
        }

        .job h3 {
            margin-bottom: 10px;
            font-size: 24px;
            font-weight: bold;
            text-transform: uppercase;
        }

        .job p {
            margin: 0;
            font-size: 16px;
            font-style: italic;
            color: #666;
        }

        .job ul {
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .job li {
            margin-bottom: 5px;
        }

        .education {
            margin-bottom: 20px;
        }

        .school {
            margin-bottom: 20px;
        }

        .school h3 {
            margin-bottom: 10px;
            font-size: 24px;
            font-weight: bold;
            text-transform: uppercase;
        }

        .school p {
            margin: 0;
            font-size: 16px;
            font-style: italic;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1><%= firstName %> <%= lastName %></h1>
        <p class="address"><%= address %></p>
        <p class="contact"><%= phone %> | <%= email %></p>
    </div>
    <hr>
    <div class="summary">
        <h2>Summary</h2>
        <p><%= summary %></p>
    </div>
    <hr>
    <div class="skills">
        <h2>Skills</h2>
        <ul>
            <% skills.forEach(function(skill) { %>
                <li><%= skill %></li>
            <% }); %>
        </ul>
    </div>
    <hr>
    <div class="experience">
        <h2>Experience</h2>
        <% experience.forEach(function(job) { %>
            <div class="job">
                <h3><%= job.title %></h3>
                <p class="company"><%= job.company %></p>
                <p class="location"><%= job.location %></p>
                <p class="dates"><%= job.startDate %> - <%= job.endDate %></p>
                <ul>
                    <% job.responsibilities.forEach(function(responsibility) { %>
                        <li><%= responsibility %></li>
                    <% }); %>
                </ul>
            </div>
        <% }); %>
    </div>
    <hr>
    <div class="education">
        <h2>Education</h2>
        <% education.forEach(function(school) { %>
            <div class="school">
                <h3><%= school.degree %> in <%= school.major %></h3>
                <p class="institution"><%= school.school %></p>
                <p class="location"><%= school.location %></p>
                <p class="dates"><%= school.startDate %> - <%= school.endDate %></p>
            </div>
        <% }); %>
    </div>
</body>
</html>
