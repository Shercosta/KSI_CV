<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Resume Form</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <!-- <link href="/css/forms.css" rel="stylesheet" type="text/css"> -->
  </head>
  <body>
    <div class="container-fluid">
      <form id="resume-form">
        <h2>Personal Information</h2>
        <div class="row">
          <div class="col col-4">
            <label class="form-label" for="firstName">First Name:</label>
            <input
              class="form-control"
              type="text"
              id="firstName"
              name="firstName"
              required
            />
          </div>
          <div class="col col-4">
            <label class="form-label" for="lastName">Last Name:</label>
            <input
              class="form-control"
              type="text"
              id="lastName"
              name="lastName"
              required
            />
          </div>
          <div class="col col-4">
            <label class="form-label" for="address">Address:</label>
            <input
              class="form-control"
              type="text"
              id="address"
              name="address"
              required
            />
          </div>
          <div class="col col-6">
            <label class="form-label" for="phone">Phone:</label>
            <input
              class="form-control"
              type="tel"
              id="phone"
              name="phone"
              required
            />
          </div>
          <div class="col col-6">
            <label class="form-label" for="email">Email:</label>
            <input
              class="form-control"
              type="email"
              id="email"
              name="email"
              required
            />
          </div>
        </div>

        <h2>Summary</h2>
        <textarea
          class="form-control"
          id="summary"
          name="summary"
          required
        ></textarea>

        <h2>Skills</h2>
        <div id="skills-container"></div>
        <button class="btn btn-secondary" type="button" id="add-skill">
          Add Skill
        </button>

        <h2>Experience</h2>
        <div id="experience-container"></div>
        <button class="btn btn-secondary" type="button" id="add-experience">
          Add Experience
        </button>

        <h2>Education</h2>
        <div id="education-container"></div>
        <button class="btn btn-secondary" type="button" id="add-education">
          Add Education
        </button>

        <button class="btn btn-primary" type="submit" id="submit">
          Submit
        </button>
      </form>
    </div>
    <script src="/js/forms.js"></script>
  </body>
</html>
